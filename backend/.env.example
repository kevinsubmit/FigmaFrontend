# Application Settings
APP_NAME=NailsDash API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# Server Settings
HOST=0.0.0.0
PORT=8000

# Database Settings
# Local MySQL example:
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/nailsdash
# Docker Compose MySQL example:
DATABASE_URL=mysql+pymysql://nailsdash:nailsdash@db:3306/nailsdash
# For local development with SQLite (optional)
# DATABASE_URL=sqlite:///./nailsdash.db

# JWT Settings
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:3100,http://127.0.0.1:5173,http://192.168.1.225:3000,http://192.168.1.225:5173,http://192.168.1.225:3100,https://github.com

# AWS S3 Settings (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=nailsdash-uploads

# Redis Settings (for caching)
REDIS_URL=redis://localhost:6379/0

# Email Settings (optional, for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# File Upload Settings
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp
UPLOAD_DIR=./uploads

# Pagination Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
